<% if @user.nil? %>
<div class="error">User not found!</div>
<% else %>
  <div class="round profile-info">
  	<div class="profile-pic-container"><%= profile_pic @user %>
  	</div>
  	<div class="profile-main-info">
		<h1>Friends of <%= @user.username %></h1>
	</div>
  </div>
  <% if @user.friendships.any? %>
  	<div class="round users">
  		<% @user.friendships.each do |user| %>
  			<li>
				<%= link_pic_to_user user %>
				<%= link_to_user user %>
				<%= link_to "unfriend", "#", :method => :delete, 
											:confirm => "Are you sure you want to delete this user?",
											:title => "Unfriend #{user.username}" %>
			</li>  			
		<% end %>
  	</div>
  <% end %>
<% end %>
