<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/scripts' %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
<div class="container">
	<%= render 'layouts/header' %>
	<section class="round">
		<% flash.each do |key, value| %> <!-- Show a flash message -->
			<div class="flash <%= key %>"><%= value %></div>
		<% end %>
		<div class="error-messages"></div>

		<%= yield %>
	</section>
	<%= render 'layouts/footer' %>

<!-- 	<%= debug params %> -->
</div>

</body>
</html>
